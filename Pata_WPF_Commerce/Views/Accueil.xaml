<Window x:Class="Pata_WPF_Commerce.Views.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:Pata_WPF_Commerce.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:AccueilViewModel, IsDesignTimeCreatable=True}"
        Title="Accueil" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="30,3" HorizontalAlignment="Center">
            <Button Name="ButtonClients" Content="Clients" Margin="3" Padding="3" Command="{Binding CommandClients, Mode=OneWay}" />
            <Button Name="ButtonStocks" Content="Stocks" Margin="3" Padding="3" Command="{Binding CommandStocks, Mode=OneWay}" />
            <Button Name="ButtonAchat" Content="Achat" Margin="3" Padding="3" Command="{Binding CommandAchats, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Window>
